{
	"name": "vscode-database",
	"displayName": "vscode-database",
	"description": "Support mysql, postgres, SSL, socked - SQL database",
	"version": "2.2.0",
	"publisher": "bajdzis",
	"scripts": {
		"lint": "eslint src --ext .ts",
		"vscode:prepublish": "webpack --mode production",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test:unit": "jest",
		"test": "npm run test-compile && jest && npm run lint",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./test/"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:sql",
		"onCommand:extension.connectToSQLServer",
		"onCommand:extension.changeDB",
		"onCommand:extension.changeServer",
		"onCommand:extension.querySQL",
		"onCommand:extension.queryFileSQL",
		"onCommand:extension.queryFileSQLToCSV",
		"onCommand:extension.querySelectedSQL",
		"onCommand:extension.querySelectedSQLToCSV",
		"onCommand:extension.queryBuild",
		"onCommand:extension.runQueryBuild",
		"onCommand:extension.saveConfig"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Bajdzis/vscode-database.git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "databaseExplorer",
					"title": "Databases",
					"icon": "icons/sidePanel/database.svg"
				}
			]
		},
		"views": {
			"databaseExplorer": [
				{
					"id": "Connections",
					"name": "SQL Connections",
					"when": "MinimumOneConnectionIsOnline"
				},
				{
					"id": "Table",
					"name": "SQL Table",
					"when": "MinimumOneTableInStructure"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Database configuration",
			"properties": {
				"database.connections": {
					"type": "array",
					"default": [],
					"description": "Array of object with data to connect server on run editor or change workspace"
				}
			}
		},
		"commands": [
			{
				"command": "extension.connectToSQLServer",
				"category": "SQL",
				"title": "Connect to MySQL / PostgreSQL server"
			},
			{
				"command": "extension.changeDB",
				"category": "SQL",
				"title": "Select database"
			},
			{
				"command": "extension.changeServer",
				"category": "SQL",
				"title": "Change connected server"
			},
			{
				"command": "extension.querySQL",
				"title": "Query",
				"category": "SQL"
			},
			{
				"command": "extension.queryFileSQL",
				"title": "Run file as query",
				"category": "SQL",
				"icon": {
					"dark": "icons/dark/database.svg",
					"light": "icons/light/database.svg"
				}
			},
			{
				"command": "extension.queryFileSQLToCSV",
				"title": "Run file as query with CSV result",
				"category": "SQL",
				"icon": {
					"dark": "icons/dark/database.svg",
					"light": "icons/light/database.svg"
				}
			},
			{
				"command": "extension.querySelectedSQL",
				"category": "SQL",
				"title": "Run selected text as SQL query"
			},
			{
				"command": "extension.querySelectedSQLToCSV",
				"category": "SQL",
				"title": "Run selected text as SQL query with CSV result"
			},
			{
				"command": "extension.queryBuild",
				"category": "SQL",
				"title": "Query Advancer Build"
			},
			{
				"command": "extension.runQueryBuild",
				"category": "SQL",
				"title": "Run Query Advancer Build"
			},
			{
				"command": "extension.saveConfig",
				"category": "SQL",
				"title": "Save current server"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.querySelectedSQL",
					"when": "editorHasSelection && editorLangId == 'sql'",
					"group": "10_mysql"
				},
				{
					"command": "extension.querySelectedSQLToCSV",
					"when": "editorHasSelection && editorLangId == 'sql'",
					"group": "10_mysql"
				}
			],
			"editor/title": [
				{
					"command": "extension.queryFileSQL",
					"when": "editorLangId == 'sql'",
					"group": "navigation@1"
				},
				{
					"command": "extension.queryFileSQLToCSV",
					"when": "editorLangId == 'sql'",
					"group": "navigation@1"
				}
			],
			"view/title": [
				{
					"command": "extension.connectToSQLServer",
					"when": "view == Connections"
				},
				{
					"command": "extension.changeDB",
					"when": "view == Connections"
				}
			]
		},
		"keybindings": [
			{
				"key": "Ctrl+q",
				"command": "extension.querySQL"
			},
			{
				"key": "Alt+q",
				"command": "extension.queryBuild"
			},
			{
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"command": "extension.querySelectedSQL",
				"when": "editorTextFocus && editorHasSelection && editorLangId == 'sql'"
			}
		],
		"snippets": [
			{
				"language": "sql",
				"path": "./snippets/main.json"
			}
		]
	},
	"dependencies": {
		"fast-csv": "^2.5.0",
		"fs": "0.0.2",
		"mysql": "^2.17.1",
		"pg": "^6.4.2"
	},
	"devDependencies": {
		"@types/jest": "^24.0.15",
		"@types/mocha": "^5.2.7",
		"@types/mysql": "^2.15.6",
		"@types/node": "^10.14.10",
		"@types/pg": "^6.1.47",
		"@types/vscode": "^1.35.0",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"eslint": "^5.16.0",
		"jest": "^24.8.0",
		"ts-jest": "^24.0.2",
		"ts-loader": "^4.4.2",
		"typescript": "^3.5.2",
		"vscode": "^1.1.34",
		"webpack": "^4.35.0",
		"webpack-cli": "^3.3.4"
	}
}
